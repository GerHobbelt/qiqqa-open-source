<Grid x:Class="Qiqqa.Common.TagManagement.TagEditorAddControl"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Input.Toolkit"
  Background="Transparent"
>
    <Border Name="ObjRoundingMask" Background="White" CornerRadius="8" />
    <controls:AutoCompleteBox Name="ComboBoxNewTag" Background="{StaticResource Background_Brush_Blue_VeryDark}" BorderThickness="0" >
        <controls:AutoCompleteBox.OpacityMask>
            <VisualBrush Visual="{Binding ElementName=ObjRoundingMask}"/>
        </controls:AutoCompleteBox.OpacityMask>
    </controls:AutoCompleteBox>
</Grid>