<UserControl x:Class="Qiqqa.Documents.PDF.PDFControls.MetadataControls.CommentsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local_gui="clr-namespace:Utilities.GUI;assembly=Utilities"
>
    <DockPanel VerticalAlignment="Center">
        <local_gui:AugmentedButton DockPanel.Dock="Bottom" Name="ButtonComments" />
        <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" MinWidth="40"  MaxHeight="200" MinHeight="80">
            <TextBox Name="ObjCommentsBox" Text="{Binding Comments}" AcceptsReturn="True" TextWrapping="Wrap"/>
        </ScrollViewer>
    </DockPanel>
</UserControl>