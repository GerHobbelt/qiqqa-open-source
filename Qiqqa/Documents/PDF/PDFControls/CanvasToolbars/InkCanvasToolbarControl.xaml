<UserControl x:Class="Qiqqa.Documents.PDF.PDFControls.CanvasToolbars.InkCanvasToolbarControl"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:local_gui="clr-namespace:Utilities.GUI;assembly=Utilities"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:wpfext="clr-namespace:Xceed.Wpf.Toolkit;assembly=WPFToolkit.Extended"
>
    <local_gui:AugmentedBorder Background="White">
        <StackPanel>
            <local_gui:AugmentedButton x:Name="ButtonDraw"/>
            <wpfext:ColorPicker Width="40" Name="ObjColorPicker" />
            <local_gui:AugmentedSpacer />
            <local_gui:AugmentedButton x:Name="ButtonStrokeErase"/>
            <local_gui:AugmentedButton x:Name="ButtonPointErase"/>
            <local_gui:AugmentedButton x:Name="ButtonSelect"/>
        </StackPanel>
    </local_gui:AugmentedBorder>
</UserControl>