<UserControl
    x:Class="Qiqqa.Documents.PDF.PDFControls.CanvasToolbars.HighlightCanvasToolbarControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local_gui="clr-namespace:Utilities.GUI;assembly=Utilities">
    <local_gui:AugmentedBorder Background="White">
        <StackPanel>
            <local_gui:AugmentedButton x:Name="ButtonPointErase" Grid.Column="0" />
            <local_gui:AugmentedButton
                x:Name="ButtonColor1"
                Grid.Column="1"
                Height="32"
                Margin="3" />
            <local_gui:AugmentedButton
                x:Name="ButtonColor2"
                Grid.Column="2"
                Height="32" />
            <local_gui:AugmentedButton
                x:Name="ButtonColor3"
                Grid.Column="3"
                Height="32" />
            <local_gui:AugmentedButton
                x:Name="ButtonColor4"
                Grid.Column="4"
                Height="32" />
            <local_gui:AugmentedButton
                x:Name="ButtonColor5"
                Grid.Column="5"
                Height="32" />
        </StackPanel>
    </local_gui:AugmentedBorder>
</UserControl>