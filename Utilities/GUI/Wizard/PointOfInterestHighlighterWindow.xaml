<Window x:Class="Utilities.GUI.Wizard.PointOfInterestHighlighterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Background="Transparent"
        >
    <Grid>
        <Border Name="ObjCornerMask" Background="White" CornerRadius="5"/>
        <Grid Background="Red">
            <Grid.OpacityMask>
                <VisualBrush Visual="{Binding ElementName=ObjCornerMask}"/>
            </Grid.OpacityMask>
        </Grid>
    </Grid>
</Window>